.container
    .well
        form.form-horizontal(name="signupform")
            fieldset
                legend New User Information
                .form-group
                    label.col-md-2.control-label(for="email") Email
                    .col-md-10
                        input.form-control(name="email", type="email", placeholder="Email", ng-model="email", required)
                .form-group
                    label.col-md-2.control-label(for="password") Password
                    .col-md-10
                        input.form-control(name="password", type="password", placeholder="Password", ng-model="password", required)
                .form-group
                    label.col-md-2.control-label(for="First") First Name
                    .col-md-10
                        input.form-control(name="first", type="text", placeholder="First Name", ng-model="first", required)
                .form-group
                    label.col-md-2.control-label(for="last") Last Name
                    .col-md-10
                        input.form-control(name="last", type="text", placeholder="Last Name", ng-model="last", required)
                .form-group
                    .col-md-10.col-md-offset-2
                        .pull-right
                            button.btn.btn-primary(ng-click='signup()', ng-disabled="signupform.$invalid") Submit
                            | &nbsp;
                            a.btn.btn-default(href="/") Cancel